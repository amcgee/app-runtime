{
    "description": "A singular runtime dependency for applications on the DHIS2 platform",
    "repository": "https://github.com/dhis2/app-runtime.git",
    "author": "Austin McGee <austin@dhis2.org>",
    "license": "BSD-3-Clause",
    "private": true,
    "workspaces": [
        "runtime",
        "services/*"
    ],
    "devDependencies": {
        "@dhis2/cli-style": "^3.0.1",
        "husky": "^1.3.1",
        "loop": "^3.1.3"
    },
    "scripts": {
        "build:services": "loop \"yarn build\" --cwd ./services",
        "build:runtime": "cd runtime && yarn build",
        "build": "yarn build:services && yarn build:runtime",
        "test:services": "loop \"yarn test\" --cwd ./services",
        "test:runtime": "cd runtime && yarn test",
        "test": "yarn test:services && yarn test:runtime",
        "format": "d2-style js apply --all --no-stage",
        "watch:services": "loop \"yarn watch\" --cwd ./services",
        "watch:runtime": "cd runtime && yarn watch"
    },
    "husky": {
        "hooks": {
            "commit-msg": "d2-style commit check",
            "pre-commit": "d2-style js apply"
        }
    }
}
